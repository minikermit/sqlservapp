<h1>New depreciation</h1>

<% form_for(@depreciation) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.collection_select(:type_id, Depreciation.type_id_name_options, :first, :last, :class => 'select')  %>
  </p>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name, :size => 25  %>
  </p>
  <p>
    <%= f.label :currency %> / <%= f.label :amount %><br />
    <%= f.text_field :currency, :size => 3 %> <%= f.text_field :amount, :size => 17  %>
  </p>
  <p>
    <%= f.label :event_date %> / <%= f.label :period_id %><br />
    <%= f.date_select :event_date %>  /  <%= f.text_field :period_id, :size => 6 %>
  </p>
  <p>
    <%= f.label :debit_account %> / <%= f.label :credit_account %><br />
    <%= f.text_field :debit_account, :size => 20 %> /  <%= f.text_field :credit_account, :size => 20 %>
  </p>
  <p>
    <%= f.label :comments %><br />
    <%= f.text_area :comments,  :size => '80x10' %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', depreciations_path %>