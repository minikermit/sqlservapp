<%= link_to image_tag 'icons/folder_magnify.png', :id => "toggleButton" %>

<div id="toggleSection">
 <fieldset>
  <legend>Search form</legend>
  <div id="selection">
  <% form_for @search do |f| %>

    <h2>Choose your search criteria</h2>
        <!--
            Setting all the checkbox names to "source[] helps us build the array on submit"
            We're also adding the RSS feed url to the checkbox value so we can save it in the array values

        -->
  <ul>
    <li> <%= f.label :identification_equals, 'Id' %> </li>
    <li> <%= f.text_field :identification_equals, :class => 'text' %></li>
    <li> <%= f.label :name_like, "Name " %> </li>
    <li> <%= f.text_field :name_like, :class => 'text' %></li>
    <li> <%= f.label :type_id_equals, "Type of invoice " %> </li>
    <li> <%= f.text_field :type_id_equals, :class => 'text' %></li>
  </ul>

  <!-- Setting the submit name to "btn" -->
  <%= f.submit "Search" %>
  <% end %>
   </div>
 </fieldset>
</div>



<div id = "Invoices">

  <% title "Invoices" %>
<caption>Invoices</caption>

<br />

<table summary="List of all invoices" width=98% >

  <thead>
    <tr>
      <th>Identification</th>
      <th>Name</th>
      <th>Counterparty/Account</th>
      <th>Amount</th>
      <th>Type</th>
      <th>Booked on</th>
    </tr>
  </thead>

  <tbody>
  <% @invoices.each do |invoice| %>
  <tr>
    <td><%=h invoice.identification %></td> 
    <td><%=h invoice.name %></td>
    <td><%=h invoice.counterparty %> / <%=h invoice.account %></td>
    <td><%=h invoice.amount %></td>
    <td><%=h invoice.type_name %></td>    
    <td><%=h invoice.booked_on %></td>
    <td><%= link_to 'Show', invoice %></td>
    <td><%= link_to 'Edit', edit_invoice_path(invoice) %></td>
    <td><%= link_to 'Destroy', invoice, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
  <% end %>
  </tbody>

</table>

<br />

<div class="digg_pagination">
  <div class="page_info">
    <%= page_entries_info @invoices %>
  </div>
    <%= will_paginate @invoices, :container => false %>
</div>

<p><%= link_to 'New invoice', new_invoice_path %> | <%= link_to 'Accruals', accruals_path %> | <!--%= link_to 'Compute accruals', compute_accruals_path %--> | <%= link_to 'Depreciation', depreciations_path %> | <!--%= link_to 'Compute depreciation', compute_depreciations_path %--></p>

</div><!--/#invoices-->    