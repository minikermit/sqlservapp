<h1>Listing bookmarks</h1>

<table>
  <tr>
    <th>Type</th>
    <th>Name</th>
    <th>Summary</th>
    <th>Location</th>
    <th>Target</th>
    <th>Position</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @bookmarks.each do |bookmark| %>
  <tr>
    <td><%= bookmark.type %></td>
    <td><%= link_to bookmark.name, bookmark.location, :target => "_blank", :title => bookmark.summary %></td>
    <td><%= link_to 'Edit', edit_bookmark_path(bookmark) %></td>
    <td><%= link_to 'Destroy', bookmark, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

